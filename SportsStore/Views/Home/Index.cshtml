@model ProductsListViewModel

@foreach (var p in Model.Products ?? Enumerable.Empty<Product>())
{
    <div class="p-4 bg-white rounded-lg shadow-md mb-4">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Name: @p.Name</h3>
        <p class="text-gray-600 mb-4">Description: @p.Description</p>
        <h4 class="text-lg font-medium text-gray-900">Price: @p.Price.ToString("c")</h4>
    </div>
}

<div class="mt-6 flex justify-center">
    <div page-model="@Model.PagingInfo" page-action="Index" class="pagination-container bg-blue-500 text-white py-2 px-4 rounded-full shadow-md">
        "@Model.CurrentCategory"
    </div>
</div>
